public class PowXN {
	public static void main(String [] args)
	{
		System.out.println(myPow(2, -2));
	}
	
	public static double myPow(double x, int n)
	{
		double temp=x;
		if(x>0)
		{
			for(int i=1;i<n;i++)
			{
				temp=temp*x;
			}
		}
		else if(x<0) {
			for(int i=1;i<n;i++)
			{
				temp=temp/x;
			}
		}
		else {
			return 0.0000;
		}
		return temp;
	}
}
