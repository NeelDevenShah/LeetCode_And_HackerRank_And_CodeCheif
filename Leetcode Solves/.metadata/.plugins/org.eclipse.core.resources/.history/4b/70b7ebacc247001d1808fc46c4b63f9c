import java.util.ArrayList;
import java.util.List;

public class Subsets1 {
	public static void main(String [] args) {
		int arr[]=new int[]{1,2,3};
		List<List<Integer>> ans=subsets(arr);
		for(int i=0;i<ans.get(0).size();i++) {
			System.out.println(ans.get(0));
		}
	}
	
	public static List<List<Integer>> subsets(int[] nums){
		List<ArraList<Integer>> ans=new ArrayList<>();
		recursionFun(0, nums, ans, new ArrayList<Integer>());
		return ans;
	}
	
	public static void recursionFun(int idx, int[] nums, List<ArrayList<Integer>> ans, List<Integer> subAns){
		if(idx==nums.length) {
			ans.add(new ArrayList<>(subAns));
			return;
		}
		subAns.add(nums[idx]);
		recursionFun(idx+1, nums, ans, subAns);
		subAns.remove(subAns.size()-1);
		recursionFun(idx+1, nums, ans, subAns);
	}
	
}
